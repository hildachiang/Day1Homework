@model Day1Homework.ViewModel.AccountBookModel
@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Home Page";
}

<div class="well">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <label for="category" class="col-sm-2 control-label">類別</label>
                <div class="col-md-10">

                    @{var listItems = new List<ListItem>{
                        new ListItem { Text = "請選擇", Value="" },
                        new ListItem { Text = "支出", Value="支出" },
                        new ListItem { Text = "收入", Value="收入" }
                    };}
                    @Html.DropDownList("category", new SelectList(listItems, "Value", "Text"), new { @class = "form-control" })

                </div>
            </div>
            <div class="form-group">
                <label for="money" class="col-sm-2 control-label">金額</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BillingAmount, new { htmlAttributes = new { @class = "form-control", placeholder = "金額" } })
                    @Html.ValidationMessageFor(model => model.BillingAmount, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">日期</label>  <div class="col-md-10">
                    @Html.EditorFor(model => model.AccountDate, new { htmlAttributes = new { @class = "form-control", placeholder = "日期" } })
                    @Html.ValidationMessageFor(model => model.AccountDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">備註</label>  <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
     }
</div>
@Html.Action("ChildAction")
